$backgroundColor=#00A29A


.eport-page
  min-width 1024px
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background-color $backgroundColor
  .wrapper
    width 1024px
    margin-left auto
    margin-right auto
    position relative
    background-color $backgroundColor
    .upper
      .banner
        background-image url('/app/img/home/banner.jpg')
        width 1024px
        height 400px
        background-size cover
        padding-top 10px
        position relative
        .header
          margin 0 auto 50px auto
          padding 5px 20px
          border-bottom 1px white solid
          width 800px
          color white
          text-align right
          a,span
            color white
            padding 3px 8px
            border-radius 10px
            transition all 0.2s ease-out
            text-decoration none
          a:hover
            background-color white
            color $backgroundColor
            text-decoration none

        .logo
          background-image url('/app/img/home/logo.png')
          background-size cover
          margin-left auto
          margin-right auto
          width 400px
          height 226px
          position relative
          left 0
          transition all 0.3s ease-in-out
        .logo.logging-in
          left -100px

        .login-box
          width 300px
          height 300px
          position absolute
          right 50px
          top 60px
          opacity 1
          transition all 0.3s ease-in-out
          &.ng-hide
            opacity 0


    .lower
      position relative
      height 370px
      .card
        position absolute
        left 0
        top 0
        width 329px
        height 187px
        background-image url('/app/img/home/card.jpg')
        background-size cover
        a
          display block
          width 100%
          height 100%
      .notice
        position absolute
        left 329px
        top 0
        width 441px
        height 187px
        background-image url('/app/img/home/notice.jpg')
        background-size cover
        .notice-list-item
          list-style none
          padding 3px 5px
          a
            color rgba(255,255,255,0.8)
            text-decoration underline
            &:hover
              color white
      .support
        position absolute
        left 770px
        top 0
        width 253px
        height 370px
        background-image url('/app/img/home/support.jpg')
        background-size cover
      .faq
        position absolute
        left 0
        top 187px
        width 461px
        height 183px
        background-image url('/app/img/home/faq.jpg')
        background-size cover
      .download
        position absolute
        left 461px
        top 187px
        width 310px
        height 183px
        background-image url('/app/img/home/download.jpg')
        background-size cover
      h1
        color #eeeeee
        font-family 'Microsoft YaHei','Helvetica',"Arial Black"
        font-size 20px
        font-weight 400
        margin-left 15px
        text-shadow 2px 2px 3px black
    .footer
      position relative
      padding 20px
      .footer-content
        margin 0 auto
        text-align center
        line-height 30px
        span,a
          color rgba(255,255,255,0.6)
          padding 0 10px

@media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation: portrait)
  .eport-page
    min-width 768px
    width 768px
    .wrapper
      width 100%
      .upper
        .banner
          width 768px
          height 400px
          .header
            width 700px
          .logo
            width 355px
            height 200px
            top 30px
          .logo.logging-in
            left -150px
      .lower
        .card
          width 246px
        .notice
          left 246px
          width 330px
        .support
          left 576px
          width 190px
        .faq
          width 345px
        .download
          left 345px
          width 232px
